<style>

  :root {
    --bg-color: black;
    --font-color: white;
    --hover-color: cyan;
  }

  div.navbar {
    color: var(--font-color);
    font-size: 1.5em;
    border-bottom: none;
    justify-content: space-between;
    background-color: var(--bg-color);
    min-height: 80px;
    max-height: 80px;
    padding: 0;
  }

  div.navbar .show ul {
    z-index: 99;
    position: absolute;
    top: 80px;
    height: 400px;
    left: 0;
    background-color: rgba(0, 0, 0, 0.7);
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: all 0.5s ease-in-out;
  }

  div.navbar li {
    flex: 1 1 auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  div.navbar img {
    width: 36px;
    filter: invert(1);
  }

  .nav-pills .nav-link.active {
    background-color: rgba(0, 0, 0, 0);
    transform: scale(1.5);
    color: var(--hover-color);
  }

  div.navbar a, i {
    color: var(--font-color);
    text-decoration: none;
    transition: all 0.5s;
    cursor: pointer;
  }

  .navbar i {
    font-size: 1.5em;
    position: relative;
  }

  .navbar i span {
    position: absolute;
    top: 2px;
    left: 5px;
    font-size: .8em;
    filter:blur(2px);
    color: var(--font-color);
  }

  .navbar i:hover span {
    transform: scale(1.3);
    animation: flicker 0.5s;
    animation-iteration-count: infinite;
  }

  @keyframes flicker {
    0% { opacity: 1; }
    10% { opacity: 0.9; }
    20% { opacity: 0.8; }
    30% { opacity: 0.7; }
    40% { opacity: 0.6; }
    50% { opacity: 0.5; }
    60% { opacity: 0.6; }
    70% { opacity: 0.7; }
    80% { opacity: 0.8; }
    90% { opacity: 0.9; }
    100% { opacity: 1; }
  }


  div.navbar a:hover, i:hover {
    color: var(--hover-color);
    transform: scale(1.5);
    transition: all 0.5s;
  }

  @media only screen and (max-width: 767px) {
    .navbar-collapse {
      width: 100%;
      position: absolute; 
      top: 0;
      left: 0;
    }
  }
</style>

<div class="navbar navbar-expand-md navbar">    
  <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
    <%= image_tag 'list-icon.svg' %>
  </button>

  <div class="collapse navbar-collapse">
    <ul class="nav nav-pills nav-fill w-100 py-3" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Home</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link"　id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">About</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link"　id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Projects</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link"　id="pills-chat-tab" data-toggle="pill" href="#pills-chat" role="tab" aria-controls="pills-chat" aria-selected="false">Hello</a>
      </li>
      <li>
        <i class="far fa-lightbulb" id="style-changer"><span>*</span></i>
      </li>
    </ul>
  </div>
</div>
  


<script>
  const colors = {
    0: ['#F7B7B7', '#628A8E', '#76B87C'],
    1: ['black', 'white', 'cyan'],
    2: ['white', 'black', 'red']
  }

  let iterator = 0;

  function handleUpdate() {
    document.documentElement.style.setProperty('--bg-color', colors[iterator][0]);
    document.documentElement.style.setProperty('--font-color', colors[iterator][1]);
    document.documentElement.style.setProperty('--hover-color', colors[iterator][2]);
    iterator ++;
    document.querySelector('.navbar i span').style.setProperty('--font-color', colors[iterator][2])
  }

  document.getElementById('style-changer').addEventListener('click', handleUpdate)

  const navbarToggler = document.querySelector('button.navbar-toggler')
  const navbar = document.querySelector('.navbar-collapse')

  navbarToggler.addEventListener('click', function() {
    navbar.classList.toggle('show')
  })

  document.querySelectorAll('a.nav-link').forEach((element) => {
    element.addEventListener('click', function() {
      navbar.classList.remove('show');
    })
  })
</script> 