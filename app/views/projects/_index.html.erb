<div class="panels">
  <% projects.each do |project| %>
    <div class="panel" 
         style='background-image: linear-gradient(to bottom, rgba(245, 246, 252, 0.52), rgba(117, 19, 93, 0.73)),
                                    url(<%= asset_path("#{project.title.gsub(' ', '_')}.jpg") %>);'>
      <h3><%= project.title %></h3>
      <div class="project-description-box">
        <p><%= project.description %></p>
        <a class="project-link-button" href="<%= project.link %>" target="_blank">visit</a>
      </div>
    </div>
  <% end %>
</div>

<% if false %>
  url(<%= asset_path("#{project.title.gsub(' ', '_')}.jpg") %>) 
<% end %>
