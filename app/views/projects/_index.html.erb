<div class="panels">
  <% projects.each do |project| %>
    <div class="panel" 
         style='background-image: linear-gradient(to bottom, rgba(245, 246, 252, 0.52), rgba(0, 0, 0, 0.5)),
                                    url(<%= asset_path("#{project.title.gsub(' ', '_')}.jpg") %>);'>
      <h3><%= project.title %></h3>
      <div class="project-description-box">
        <p><%= project.description %></p>

        <%= link_to "visit", "http://#{project.link}", target: "_blank", class: "project-link-button" %>
      </div>
    </div>
  <% end %>
</div>
