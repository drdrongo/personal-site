<div class="projects-container">
  <h2>Projects</h2>
  <% projects.each do |project| %>
    <div class="project-card">
      <div class="project-card-content">
        <h5><%= link_to project.title, project_path(project) %></h5>
        <p><%= project.description %></p>
        <p><strong>Link: <%= link_to project.link, "http://#{project.link}" %></strong></p>
      </div>
      <%= image_tag "#{project.title.gsub(' ', '_')}.jpg" %>
    </div>
  <% end %>
</div>