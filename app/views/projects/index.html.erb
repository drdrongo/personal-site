

<div class="container-fluid d-flex flex-column align-items-center" style="background-color: lightgrey; height: 100vh;">
<% @projects.each do |project| %>
  <div class="card w-75 mb-3 p-3 rounded">
    <h1><%= link_to project.title, project_path(project) %></h1>
    <p><%= project.description %></p>
    <p><strong>Link: <%= link_to project.link, "http://#{project.link}" %></strong></p>
  </div>
<% end %>
</div>